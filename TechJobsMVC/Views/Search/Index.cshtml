<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>


        @foreach (var column in ViewBag.columns)
        {

            string checkedRadio = ViewBag.searchType ?? "all";
            <span>
                <input type="radio" name="searchType" id="@column.Key" value="@column.Key" @(column.Key == checkedRadio ? "checked":"")/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }


        </p>


        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.

        <table class="job-listing">
            <tbody>
                @foreach (var kvp in ViewBag.jobs)

                {
                    <tr>
                        <td>@kvp.Name</td>
                        <td>@kvp.Employer</td>
                        <td>@kvp.Location</td>
                        <td>@kvp.PositionType</td>
                        <td>@kvp.CoreCompetency</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    

</div>
       
    
